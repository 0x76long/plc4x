            <tdml:documentPart type="byte">0400001611D00001000200C00109C1020100C2020102</tdml:documentPart>
        </tdml:document>

        <tdml:errors>
            <tdml:error>Parse Error</tdml:error>
        </tdml:errors>
    </tdml:parserTestCase>

